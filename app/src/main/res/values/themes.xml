<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.DailyDay" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/light_gray</item>
        <item name="colorPrimaryVariant">@color/gray</item>
        <item name="colorOnPrimary">@color/gray</item>
        <item name="colorSecondary">@color/gray</item>
        <item name="colorSecondaryVariant">@color/blue</item>
        <item name="colorOnSecondary">@color/gray</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="ColorPickerDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/dialog_corner</item>
        <item name="android:textColor">@color/orange</item>
        <item name="buttonBarPositiveButtonStyle">@style/ColorPickerButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/ColorPickerButton</item>
    </style>

    <style name="ColorPickerButton" parent="Theme.AppCompat">
        <item name="backgroundTint">@color/gray</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textColor">@color/ultra_white</item>
    </style>

    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_rounded_bottom_sheet</item>
        <item name="android:backgroundTint">@color/gray</item>
    </style>
    <style name="BottomSheetLight" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_rounded_bottom_sheet</item>
        <item name="android:backgroundTint">@color/light_mode</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheet</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <style name="BaseBottomSheetDialogLight" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetLight</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <style name="ThemeOverlay.MySwitchCompat" parent="">
        <item name="colorControlActivated">@color/orange</item>
        <item name="colorSwitchThumbNormal">@color/ultra_white</item>
        <item name="android:colorForeground">#42221f1f</item>
    </style>

    <style name="ThemeOverlay.Mode" parent="">
        <item name="colorControlActivated">@color/ultra_white</item>
        <item name="colorSwitchThumbNormal">@color/black</item>
        <item name="android:colorForeground">@color/light_light_gray</item>
    </style>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="colorPrimary">@color/orange</item>
    </style>

    <style name="AppSearchView" parent="Base.Widget.AppCompat.SearchView.ActionBar" >
        <item name="android:textSize">@dimen/dimen_16</item>
        <item name="searchHintIcon">@null</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorHint">@color/greyish</item>
        <item name="android:tint">@color/orange_red</item>
    </style>

    <style name="circular">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

</resources>