    <style name="ColorPickerDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/dialog_corner</item>
        <item name="android:textColor">?primaryTextColor</item>
        <item name="buttonBarPositiveButtonStyle">@style/ColorPickerButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/ColorPickerButton</item>
    </style>

    <style name="ColorPickerButton" parent="Theme.AppCompat">
        <item name="backgroundTint">?primaryStrokeColor</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textColor">?primaryTextColor</item>
    </style>

    <style name="BaseBottomSheetDialogGray" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetGray</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <style name="BottomSheetGray" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_rounded_bottom_sheet</item>
        <item name="android:backgroundTint">?primaryBackgroundColor</item>
    </style>

    <style name="BaseBottomSheetDialogLight" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetLight</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <style name="BottomSheetLight" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_rounded_bottom_sheet</item>
        <item name="android:backgroundTint">?primaryBackgroundColor</item>
    </style>

    <style name="BaseBottomSheetDialogDark" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetDark</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <style name="BottomSheetDark" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_rounded_bottom_sheet</item>
        <item name="android:backgroundTint">?primaryBackgroundColor</item>
    </style>

    <style name="ThemeOverlay.SwitchTheme" parent="">
        <item name="colorControlActivated">?primaryButtonColor</item>
        <item name="colorSwitchThumbNormal">?primarySwitchColor</item>
        <item name="android:colorForeground">#42221f1f</item>
    </style>

    <style name="AppSearchView" parent="Base.Widget.AppCompat.SearchView.ActionBar">
        <item name="android:textSize">@dimen/dimen_16</item>
        <item name="searchHintIcon">@null</item>
        <item name="android:textColorPrimary">?primaryTextColor</item>
        <item name="android:textColorHint">?secondaryTextColor</item>
        <item name="android:tint">?primaryButtonColor</item>
    </style>

    <style name="circular">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="slider" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressBackgroundTint">?quaternaryBackgroundColor</item>
        <item name="android:progressTint">?primaryIconTintColor</item>
        <item name="android:thumbTint">?primaryIconTintColor</item>
    </style>

</resources>