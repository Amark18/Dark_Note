<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        app:cardBackgroundColor="@color/light_gray"
        app:cardCornerRadius="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:padding="10dp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/a_z"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                app:cardBackgroundColor="@color/gray"
                app:cardCornerRadius="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:gravity="bottom|center"
                    android:layout_marginBottom="2dp"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="10dp"
                    android:text="Alphabetical ➙ A - Z"
                    android:textColor="@color/ultra_white"
                    android:textSize="14sp"
                    android:textStyle="bold"></TextView>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/z_a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                app:cardBackgroundColor="@color/gray"
                app:cardCornerRadius="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/a_z"
                app:layout_constraintTop_toBottomOf="@+id/a_z">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:layout_marginBottom="2dp"
                    android:gravity="bottom|center"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="10dp"
                    android:text="Alphabetical ➙ Z - A"
                    android:textColor="@color/ultra_white"
                    android:textSize="14sp"
                    android:textStyle="bold"></TextView>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/checked_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                app:cardBackgroundColor="@color/gray"
                app:cardCornerRadius="15dp"
                app:layout_constraintEnd_toEndOf="@+id/checked_top"
                app:layout_constraintStart_toStartOf="@+id/checked_top"
                app:layout_constraintTop_toBottomOf="@+id/checked_top">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:layout_marginBottom="2dp"
                    android:paddingHorizontal="15dp"
                    android:gravity="bottom|center"
                    android:paddingVertical="10dp"
                    android:text="Checked Items ➙ Bottom"
                    android:textColor="@color/ultra_white"
                    android:textSize="14sp"
                    android:textStyle="bold"></TextView>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/checked_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                app:cardBackgroundColor="@color/gray"
                app:cardCornerRadius="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/z_a">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:layout_marginBottom="2dp"
                    android:paddingHorizontal="15dp"
                    android:gravity="bottom|center"
                    android:paddingVertical="10dp"
                    android:text="Checked Items ➙ Top"
                    android:textColor="@color/ultra_white"
                    android:textSize="14sp"
                    android:textStyle="bold"></TextView>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/add_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                app:cardBackgroundColor="@color/gray"
                app:cardCornerRadius="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/add_bottom"
                app:layout_constraintStart_toStartOf="@+id/add_bottom"
                app:layout_constraintTop_toBottomOf="@+id/add_bottom">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:layout_marginBottom="2dp"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="10dp"
                    android:gravity="bottom|center"
                    android:text="New Items ➙ Top"
                    android:textColor="@color/ultra_white"
                    android:textSize="14sp"
                    android:textStyle="bold"></TextView>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/add_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                app:cardBackgroundColor="@color/gray"
                app:cardCornerRadius="15dp"
                app:layout_constraintEnd_toEndOf="@+id/checked_bottom"
                app:layout_constraintStart_toStartOf="@+id/checked_bottom"
                app:layout_constraintTop_toBottomOf="@+id/checked_bottom">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:layout_marginBottom="2dp"
                    android:paddingHorizontal="15dp"
                    android:gravity="bottom|center"
                    android:paddingVertical="10dp"
                    android:text="New Items ➙ Bottom"
                    android:textColor="@color/ultra_white"
                    android:textSize="14sp"
                    android:textStyle="bold"></TextView>

            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/baloo_bhai"
        android:gravity="center"
        android:text="Sort"
        android:layout_marginTop="10dp"
        android:textColor="@color/orange"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/materialCardView8" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/materialCardView8"
        android:layout_width="50dp"
        android:layout_height="10dp"
        android:layout_marginTop="10dp"
        android:padding="13dp"
        app:cardBackgroundColor="@color/light_gray_2"
        app:cardCornerRadius="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/clear_filter"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginRight="24dp"
        android:rotationY="180"
        android:src="@drawable/reset_icon"
        app:layout_constraintBottom_toBottomOf="@+id/title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/materialCardView8" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginVertical="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/background">

        <CheckBox
            android:id="@+id/apply_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:buttonTint="@color/orange"
            android:text="Apply to All Checklists ➙ (Select First)"
            android:textColor="@color/cornflower_blue" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>