<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="5dp"
    android:clickable="true"
    android:focusable="true"
    android:layout_marginHorizontal="5dp"
    app:cardBackgroundColor="@color/light_gray"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="100">

            <LinearLayout
                android:id="@+id/checkItem"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="99"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/check_status"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="10dp"
                    android:src="@drawable/unchecked_icon"></ImageView>

                <TextView
                    android:id="@+id/note_Textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginVertical="10dp"
                    android:text="Note"
                    android:textColor="@color/ultra_white"
                    android:textSize="26sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/edit"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginVertical="10dp"
                    android:src="@drawable/edit_icon"/>

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/add_subchecklist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/add_icon"
                    android:elevation="5dp"
                    android:layout_marginRight="5dp"
                    app:backgroundTint="@color/darker_blue"
                    app:fabCustomSize="40dp" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/item_image_layout"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginVertical="4dp"
                    android:layout_marginHorizontal="10dp"
                    app:cardCornerRadius="10dp"
                    android:backgroundTint="@color/chetwode_blue">

                    <ImageView
                        android:id="@+id/item_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:scaleType="fitXY"
                        android:backgroundTint="@color/mdtp_transparent_black"
                        android:src="@drawable/icon_image"/>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/subchecklist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/date_created"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="5dp"
            android:text="Date"
            android:visibility="visible"
            android:textColor="@color/golden_rod"
            android:textSize="16sp" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>