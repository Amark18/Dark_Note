<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentInsetStart="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/close_activity"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/close_icon">
            </ImageView>

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="Settings"
                android:gravity="center"
                android:fontFamily="@font/baloo_bhai"
                android:textColor="@color/ultra_white"
                android:textSize="38sp"
                android:layout_gravity="center">
            </TextView>

        </androidx.appcompat.widget.Toolbar>

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/mode_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:checked="false"
            android:fontFamily="@font/baloo_bhai"
            android:scaleX="1.3"
            android:scaleY="1.3"
            android:text="Dark Mode  "
            android:textColor="@color/light_mode"
            android:textSize="20sp"
            android:theme="@style/ThemeOverlay.Mode"
            app:layout_constraintEnd_toEndOf="@+id/account_settings"
            app:layout_constraintStart_toStartOf="@+id/account_settings"
            app:layout_constraintTop_toBottomOf="@+id/toolbar" />

        <TextView
            android:id="@+id/account_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:fontFamily="@font/baloo_bhai"
            android:gravity="center"
            android:text="Account"
            android:textColor="@color/orange"
            android:textSize="28sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mode_setting" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/account_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="20dp"
            app:cardBackgroundColor="@color/light_gray"
            app:cardCornerRadius="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/account_settings">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:orientation="horizontal"
                    android:weightSum="100">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/sign_up"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="50"
                        android:layout_marginHorizontal="10dp"
                        android:paddingVertical="10dp"
                        android:gravity="center"
                        android:backgroundTint="@color/gray"
                        android:text="Sign Up"
                        app:cornerRadius="15dp"
                        android:textColor="@color/ultra_white"
                        android:textSize="20sp"/>

                    <TextView
                        android:id="@+id/account_name"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/baloo_bhai"
                        android:gravity="center"
                        android:text=""
                        android:visibility="gone"
                        android:layout_gravity="center"
                        android:layout_weight="50"
                        android:textColor="@color/blue"
                        android:textSize="24sp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/log_in"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="50"
                        android:backgroundTint="@color/gray"
                        android:paddingVertical="10dp"
                        android:layout_marginHorizontal="10dp"
                        android:gravity="center"
                        android:text="Login"
                        app:cornerRadius="15dp"
                        android:textColor="@color/ultra_white"
                        android:textSize="20sp"/>

                </LinearLayout>

                <ImageView
                    android:id="@+id/space_one"
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:layout_height="4dp"
                    android:background="@color/gray"></ImageView>

                <LinearLayout
                    android:id="@+id/logged_in_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:visibility="gone"
                    android:orientation="horizontal"
                    android:weightSum="100">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/sync"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="50"
                        android:layout_marginHorizontal="10dp"
                        android:gravity="center"
                        android:paddingVertical="10dp"
                        android:backgroundTint="@color/gray"
                        android:text="Sync"
                        app:cornerRadius="15dp"
                        android:textColor="@color/ultra_white"
                        android:textSize="20sp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/upload"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="50"
                        android:backgroundTint="@color/gray"
                        android:paddingVertical="10dp"
                        android:layout_marginHorizontal="10dp"
                        android:gravity="center"
                        android:text="Upload"
                        app:cornerRadius="15dp"
                        android:textColor="@color/ultra_white"
                        android:textSize="20sp"/>

                </LinearLayout>

                <ImageView
                    android:id="@+id/space_two"
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:layout_height="4dp"
                    android:background="@color/gray"></ImageView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/last_upload"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/baloo_bhai"
                        android:gravity="center"
                        android:text=""
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginVertical="5dp"
                        android:visibility="gone"
                        android:layout_gravity="center"
                        android:layout_weight="50"
                        android:textColor="@color/blue"
                        android:textSize="20sp"/>

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/backup_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/baloo_bhai"
            android:gravity="center"
            android:text="Backup &amp; Restore (Local)"
            android:textColor="@color/orange"
            android:textSize="28sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/account_layout"/>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/materialCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="20dp"
            app:cardBackgroundColor="@color/light_gray"
            app:cardCornerRadius="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/backup_settings">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/backup"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:orientation="horizontal"
                    android:weightSum="100">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="99"
                        android:gravity="center_vertical"
                        android:text="Backup"
                        android:textColor="@color/ultra_white"
                        android:textSize="24sp"
                        android:textStyle="bold">
                    </TextView>

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:src="@drawable/arrow_right_icon">
                    </ImageView>

                </LinearLayout>

                <ImageView
                    android:id="@+id/gap_one"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:background="@color/gray"></ImageView>

                <LinearLayout
                    android:id="@+id/backup_beta"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:orientation="horizontal"
                    android:weightSum="100">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="99"
                        android:gravity="center_vertical"
                        android:text="Backup + Images"
                        android:textColor="@color/ultra_white"
                        android:textSize="24sp"
                        android:textStyle="bold"></TextView>

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/arrow_right_icon"></ImageView>

                </LinearLayout>

                <ImageView
                    android:id="@+id/gap_two"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:background="@color/gray"></ImageView>

                <LinearLayout
                    android:id="@+id/restore_backup"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:orientation="horizontal"
                    android:weightSum="100">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="99"
                        android:gravity="center_vertical"
                        android:text="Restore Backup"
                        android:textColor="@color/ultra_white"
                        android:textSize="24sp"
                        android:textStyle="bold"></TextView>

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/arrow_right_icon"></ImageView>

                </LinearLayout>

                <ImageView
                    android:id="@+id/gap_three"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:background="@color/gray"></ImageView>

                <LinearLayout
                    android:id="@+id/restore_beta_backup"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:orientation="horizontal"
                    android:weightSum="100">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="99"
                        android:gravity="center_vertical"
                        android:text="Restore Backup + Images"
                        android:textColor="@color/ultra_white"
                        android:textSize="24sp"
                        android:textStyle="bold"></TextView>

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/arrow_right_icon"></ImageView>

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/note_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/baloo_bhai"
            android:gravity="center"
            android:text="Note Preview Settings"
            android:textColor="@color/orange"
            android:textSize="28sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/materialCardView"></TextView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/materialCardView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="@color/light_gray"
            app:cardCornerRadius="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/note_settings">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="100">

                <LinearLayout
                    android:id="@+id/title_layout"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:orientation="horizontal"
                    android:weightSum="100">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="90"
                        android:gravity="center_vertical"
                        android:text="Title Lines"
                        android:textColor="@color/ultra_white"
                        android:textSize="24sp"
                        android:textStyle="bold">
                    </TextView>

                    <TextView
                        android:id="@+id/title_lines"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="9"
                        android:gravity="center|right"
                        android:text="Default"
                        android:textColor="@color/ultra_white"
                        android:textSize="18sp"
                        android:textStyle="bold">
                    </TextView>

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:src="@drawable/arrow_down">
                    </ImageView>

                </LinearLayout>

                <ImageView
                    android:id="@+id/gap_four"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_weight="2"
                    android:background="@color/gray"></ImageView>

                <LinearLayout
                    android:id="@+id/preview_layout"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:orientation="horizontal"
                    android:weightSum="100">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="90"
                        android:gravity="center_vertical"
                        android:text="Content Lines"
                        android:textColor="@color/ultra_white"
                        android:textSize="24sp"
                        android:textStyle="bold"></TextView>

                    <TextView
                        android:id="@+id/preview_lines"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="9"
                        android:gravity="center|right"
                        android:text="Default"
                        android:textColor="@color/ultra_white"
                        android:textSize="18sp"
                        android:textStyle="bold"></TextView>

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/arrow_down"></ImageView>

                </LinearLayout>

                <ImageView
                    android:id="@+id/gap_five"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_weight="2"
                    android:background="@color/gray"></ImageView>

                <LinearLayout
                    android:id="@+id/show_preview"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:orientation="horizontal"
                    android:weightSum="100">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="98"
                        android:gravity="center_vertical"
                        android:text="Show Preview"
                        android:textColor="@color/ultra_white"
                        android:textSize="24sp"
                        android:textStyle="bold"></TextView>

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/show_preview_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:scaleY="1.3"
                        android:scaleX="1.3"
                        android:paddingHorizontal="20dp"
                        android:theme="@style/ThemeOverlay.MySwitchCompat"
                        android:layout_marginRight="10dp"
                        android:checked="true">
                    </androidx.appcompat.widget.SwitchCompat>

                </LinearLayout>

                <ImageView
                    android:id="@+id/gap_six"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_weight="2"
                    android:background="@color/gray"></ImageView>

                <LinearLayout
                    android:id="@+id/show_note_info"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:orientation="horizontal"
                    android:weightSum="100">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="98"
                        android:gravity="center_vertical"
                        android:text="Show Info"
                        android:textColor="@color/ultra_white"
                        android:textSize="24sp"
                        android:textStyle="bold"></TextView>

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/show_info_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:scaleY="1.3"
                        android:scaleX="1.3"
                        android:paddingHorizontal="20dp"
                        android:theme="@style/ThemeOverlay.MySwitchCompat"
                        android:layout_marginRight="10dp"
                        android:checked="true">
                    </androidx.appcompat.widget.SwitchCompat>

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/layout_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Layout"
            android:textSize="28sp"
            android:fontFamily="@font/baloo_bhai"
            android:textColor="@color/orange"
            android:layout_marginTop="10dp"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/materialCardView5">
        </TextView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/view_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="20dp"
            app:cardBackgroundColor="@color/light_gray"
            app:cardCornerRadius="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_setting">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="20dp"
                android:weightSum="99"
                android:orientation="horizontal">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/grid"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:layout_weight="33"
                    app:cardBackgroundColor="@color/gray"
                    app:cardCornerRadius="15dp">

                    <ImageView
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_gravity="center"
                        android:background="@android:color/transparent"
                        android:src="@drawable/grid_icon"></ImageView>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/row"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="33"
                    android:layout_margin="10dp"
                    app:cardBackgroundColor="@color/gray"
                    app:cardCornerRadius="15dp">

                    <ImageView
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_gravity="center"
                        android:rotation="90"
                        android:src="@drawable/row_icon"></ImageView>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/staggered"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="33"
                    android:layout_margin="10dp"
                    app:cardBackgroundColor="@color/gray"
                    app:cardCornerRadius="15dp">

                    <ImageView
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_gravity="center"
                        android:src="@drawable/staggered_icon"></ImageView>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/folder_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/baloo_bhai"
            android:gravity="center"
            android:text="Folder Settings"
            android:textColor="@color/orange"
            android:textSize="28sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_layout"></TextView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/materialCardView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="20dp"
            app:cardBackgroundColor="@color/light_gray"
            app:cardCornerRadius="10dp"
            app:layout_constraintEnd_toEndOf="@+id/toolbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/folder_settings">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/folder_layout"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:orientation="horizontal"
                    android:weightSum="100">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="90"
                        android:gravity="center_vertical"
                        android:text="Open Folders on App Start"
                        android:textColor="@color/ultra_white"
                        android:textSize="24sp"
                        android:textStyle="bold"></TextView>

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/open_folder_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="10"
                        android:scaleY="1.3"
                        android:scaleX="1.3"
                        android:paddingHorizontal="20dp"
                        android:theme="@style/ThemeOverlay.MySwitchCompat"
                        android:layout_marginRight="15dp"
                        android:checked="true">
                    </androidx.appcompat.widget.SwitchCompat>

                </LinearLayout>

                <ImageView
                    android:id="@+id/gap_seven"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_weight="2"
                    android:background="@color/gray"></ImageView>

                <LinearLayout
                    android:id="@+id/show_folder_layout"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:paddingVertical="10dp"
                    android:orientation="horizontal"
                    android:weightSum="100">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="90"
                        android:gravity="center_vertical"
                        android:text="Put Notes In Folders"
                        android:textColor="@color/ultra_white"
                        android:textSize="24sp"
                        android:textStyle="bold"></TextView>

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/show_folder_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="10"
                        android:scaleY="1.3"
                        android:scaleX="1.3"
                        android:paddingHorizontal="20dp"
                        android:theme="@style/ThemeOverlay.MySwitchCompat"
                        android:layout_marginRight="15dp"
                        android:checked="true">
                    </androidx.appcompat.widget.SwitchCompat>

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/other_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/baloo_bhai"
            android:gravity="center"
            android:text="Other Settings"
            android:textColor="@color/ultra_white"
            android:textSize="28sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/materialCardView3"></TextView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/materialCardView99"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="20dp"
            app:cardBackgroundColor="@color/light_gray"
            app:cardCornerRadius="10dp"
            app:layout_constraintEnd_toEndOf="@+id/toolbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/other_settings">

            <LinearLayout
                android:id="@+id/checklist_sublist"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="100">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="90"
                    android:gravity="center_vertical"
                    android:text="Sub-Lists for Checklists"
                    android:textColor="@color/ultra_white"
                    android:textSize="24sp"
                    android:textStyle="bold"></TextView>

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/sublists_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_weight="10"
                    android:scaleY="1.3"
                    android:scaleX="1.3"
                    android:paddingHorizontal="20dp"
                    android:theme="@style/ThemeOverlay.MySwitchCompat"
                    android:layout_marginRight="15dp"
                    android:checked="true">
                </androidx.appcompat.widget.SwitchCompat>
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/materialCardView2"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="20dp"
            app:cardBackgroundColor="@color/light_gray"
            app:cardCornerRadius="10dp"
            app:layout_constraintEnd_toEndOf="@+id/toolbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/materialCardView99">

            <LinearLayout
                android:id="@+id/app_settings"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="100">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="95"
                    android:gravity="center|left"
                    android:text="App Settings"
                    android:textColor="@color/ultra_white"
                    android:textSize="24sp"
                    android:textStyle="bold">
                </TextView>

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_weight="5"
                    android:layout_gravity="center"
                    android:src="@drawable/settings_icon">
                </ImageView>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/version_icon"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:elevation="2dp"
            android:layout_marginTop="-10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/about_info"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/bee_flying" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/about_info"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_margin="20dp"
            app:cardBackgroundColor="@color/light_gray"
            app:cardCornerRadius="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/review"
            app:layout_constraintVertical_bias="1.0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/about"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:text="About"
                    android:textColor="@color/ultra_white"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="25dp"
                    android:layout_weight="1"
                    android:gravity="center|right"
                    android:text="@string/app_version"
                    android:textColor="@color/ultra_white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/contact"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="20dp"
            app:cardBackgroundColor="@color/light_gray"
            app:cardCornerRadius="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/materialCardView2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="100">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="95"
                    android:gravity="center|left"
                    android:text="Contact Developer"
                    android:textColor="@color/ultra_white"
                    android:textSize="24sp"
                    android:textStyle="bold"></TextView>

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_weight="5"
                    android:src="@drawable/contact_icon">
                </ImageView>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/review"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="20dp"
            app:cardBackgroundColor="@color/light_gray"
            app:cardCornerRadius="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/contact">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="100">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="95"
                    android:gravity="center|left"
                    android:text="Leave a review"
                    android:textColor="@color/ultra_white"
                    android:textSize="24sp"
                    android:textStyle="bold"></TextView>

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_weight="5"
                    android:src="@drawable/playstore_icon"></ImageView>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>